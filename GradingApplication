<html>
    <head>
        <title>Grading Application</title>
        <script>
            //variables
            var JSM = parseInt(prompt("Pleas enter the Javascript marks:"));
            var JM = parseInt(prompt("Pleas enter the Java marks:"));
            var NM = parseInt(prompt("Pleas enter the .NET marks:"));

            //calculating
            var total = JSM + JM + NM;
            var averge = total/3;

            //conditions
            if (JSM>=35 && JM>=35 && NM>=35){
                if(averge>=70){
                    document.write("Javascript marks:"+JSM+" "+"Java marks:"+JM+" "+".NET marks:"+NM+"<br/>");
                    document.write("averge:"+averge+" "+"grade: A<br/>");
                    document.write("You passed");
                }else if(averge>=60 && averge<=69){
                    document.write("Javascript marks:"+JSM+" "+"Java marks:"+JM+" "+".NET marks:"+NM+"<br/>");
                    document.write("averge:"+averge+" "+"grade: B<br/>");
                    document.write("You passed");
                }else{
                    document.write("Javascript marks:"+JSM+" "+"Java marks:"+JM+" "+".NET marks:"+NM+"<br/>");
                    document.write("averge:"+averge+" "+"grade: C<br/>");
                    document.write("You passed");
                }
            }else{
                document.write("Javascript marks:"+JSM+" "+"Java marks:"+JM+" "+".NET marks:"+NM+"<br/>");
                document.write("averge:"+averge+" "+"grade: F<br/>");
                document.write("You failed");
            }
        </script>
    </head>
</html>
